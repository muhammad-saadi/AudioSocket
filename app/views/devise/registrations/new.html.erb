
<div class="sign_up text-secondary d-flex bg-white">
  <div class="align-self-center">
    <h2 class= "text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div >
      <%= f.label :email, class:"form-label text-secondary " %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "field" %>
    </div>

    <div>
      <%= f.label :password, class:"form-label text-secondary" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" , class: "field"%>
    </div>

    <div>
      <%= f.label :password_confirmation , class:"form-label text-secondary"%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "field"%>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" , class: " btn btn-secondary align-center"%>
    </div>
    <% end %>

  <%= render "devise/shared/links" %>
  </div>

</div>

