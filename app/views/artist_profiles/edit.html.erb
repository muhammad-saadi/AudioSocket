<div class="container text-secondary col">
  <h2 class="text-center fw-light mb-5 pt-5">Edit</h2>

  <%= form_for @artist, url: artist_profile_path do |f| %>

    <div class="field ms-4 mb-3 row">
      <%= f.label :artist_name, class:"text-secondary col-6" %>
      <%= f.text_field :artist_name, readonly: true, class:"border-top-0 border-end-0 border-start-0 col-6" %>
    </div>

    <div class="field ms-4 mb-3 row">
      <%= f.label :email, class:" text-secondary col-6" %>
      <%= f.email_field :email, autocomplete:"email", class:"border-top-0 border-end-0 border-start-0 col-6 mw-30" %>
    </div>

    <div class="field mb-3 ms-4 row">
      <%= f.label :country, class:"text-secondary col-6" %>
      <%= f.select :country, ArtistProfile.country, class:"col-6" %>
    </div>

    <div class="field mb-3 ms-4 row">
      <%= f.label :profile_image, class:"text-secondary col-6" %>
      <%= f.file_field :avatar, class:"col-6" %>
    </div>

    <div class="field mb-3 ms-4 row">
      <%= f.label :bio, class:"col-6" %>
      <%= f.text_area :bio, class:"d-block col-6" %>
    </div>

    <div class="field ms-4 mb-3 row">
      <%= f.label :website_link, class:"text-secondary pe-5 col-6" %>
      <%= f.text_field :website_link, class:"border-top-0 border-end-0 border-start-0 col-6" %>
    </div>

    <div class="field ms-4 mb-3 social-link row">
      <%= f.label :social_link, class:"text-secondary col-6" %>
      <%= f.text_field :social_link, class:"border-top-0 border-end-0 border-start-0 mb-3 social-input col-6", multiple: true %>
    </div>

    <div class="dynamic-inputs field ms-4 mb-3 row"></div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <button class="actions btn btn-light add-social-link">ADD MORE</button>
    </div>
    <div class="actions">
      <%= f.submit "update", class:"btn btn-light btn-secondary btn-sm" %>
    </div>
  <% end %>
</div>

<div>
  <%= form_with url: transaction_artist_profile_path, id: "payment-form", local: false do |f| %>
    <div id="dropin-container"></div>
    <%= f.hidden_field :nonce, id: 'nonce' %>
    <div class="actions">
    <%= f.submit 'Submit', id:'payment-submission' %>
    </div>
  <% end %>
</div>

<script src="https://js.braintreegateway.com/web/dropin/1.32.1/js/dropin.min.js"></script>

<script>
  var form = $('#payment-form');
  var submitButton = $('#payment-submission');
  var client_token = "<%= @client_token %>";

  braintree.dropin.create({
    authorization: client_token,
    selector: '#dropin-container'
  }, function (err, dropinInstance) {
    if (err) {
      console.log('braintree Error',err);
      return;
    }
    submitButton.on('click', function (event) {
      dropinInstance.requestPaymentMethod(function (err, payload) {

          if (err) {
            console.log('payload Error', err);
          }

          $('#nonce').val(payload.nonce);
          form.submit();
        });
    });
  });
</script>
